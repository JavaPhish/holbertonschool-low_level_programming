# make file 

CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm
CFLAGS=-Wall -Werror -Wextra -pedantic

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)

re:
	$(RM) -f $(OBJ)
	make all
